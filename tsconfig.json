{
  "compilerOptions": {
	"target": "ESNext",                   // Syntaxe ESNext pour JavaScript
	"module": "ESNext",                   // Gestion des modules ES
	"outDir": "./dist/types",             // Les fichiers sortent dans "dist/types"
	"declaration": true,                  // On veut des fichiers .d.ts aussi
	"declarationDir": "./dist/types",     // Emplacement des définitions de type
	"emitDeclarationOnly": false,         // Assure que les `.js` sont générés
	"moduleResolution": "node",           // Résolution pour Node.js
	"esModuleInterop": true,
	"strict": true
  },
  "include": ["src/animations/**/*"],     // Inclut uniquement les fichiers nécessaires
  "exclude": ["node_modules", "dist"]     // Exclut les fichiers générés
}
